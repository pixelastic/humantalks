- title = "HumanTalks Paris"
- author = "@humantalksparis"
- baseurl = "https://pixelastic.github.io/humantalks/"
- description = "Recherchez dans l'ensemble des talks des HumanTalks Paris"
- short_description = "Recherche HumanTalks Paris"
- opengraph_image = "https://pixelastic.github.io/humantalks/img/opengraph.png"


mixin cloudinary_logo(logo)
  - cloudinary_base = 'https://res.cloudinary.com/pixelastic-humantalks/image/fetch/'
  - effects = 'w_120,c_scale,q_90,f_auto,e_grayscale'
  - websiteurl = `${baseurl}img/sponsors/${logo}.png`
  - fullurl = `${cloudinary_base}${effects}/${websiteurl}`
  .flex-auto.w-20.flex.flex-center
    img(src=fullurl, class="")

